# Azure Configuration
AZURE_VISION_KEY=your_vision_key_here
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_AI_ENDPOINT=https://your-ai-resource.services.ai.azure.com/models
AZURE_AI_KEY=your_ai_key_here
AZURE_AI_MODEL_NAME=Phi-4-mini-instruct
AZURE_API_VERSION=2024-05-01-preview

# YOLO Model Configuration
YOLO_MODEL_PATH=/path/to/your/yolo/model/best.pt
YOLO_CONFIDENCE_THRESH=0.90

# Quality Check Thresholds
BLUR_VARIANCE_THRESH=100.0
GLARE_RATIO_THRESH=5.0
GLARE_BRIGHTNESS_THRESH=220
GLARE_SATURATION_THRESH=50

# Finger Detection Settings (Convex Hull Area Difference Method)
# Simple and effective: compares actual contour area with convex hull area
# If finger overlaps, hull will be larger creating a noticeable area difference
OVERLAP_AREA_THRESHOLD=0.025  # 2.5% area difference indicates finger overlap (strict detection)
MIN_CONTOUR_AREA=5000  # Minimum contour area to process (pixels)

# Card Detection
MIN_CARD_AREA=5000
MASK_COVERAGE_THRESH=0.85

# Output Configuration
OUTPUT_DIR=outputs

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
